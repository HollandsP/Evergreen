{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": ["html", "text", "lcov"],
  "include": [
    "lib/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "pages/**/*.{ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules/",
    ".next/",
    "coverage/",
    "tests/",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}"
  ],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}